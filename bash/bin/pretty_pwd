#!/bin/sh

p="${PWD#${HOME}}"

if [ "$p" = '/' ]; then
  printf '/'
  exit 0
fi

[ "$PWD" != "$p" ] && printf '~'

# Remove first /
p=$(echo "$p" | cut -c2-)

# Set separator as /
IFS=/
for q in $p
  do printf "/%s" "$(echo "$q" | cut -c1-1)"
done

# Print the rest of the current directory
printf "%s" "$(echo "$q" | cut -c2-)"
