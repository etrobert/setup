# Aliases

# Improve output
alias grep="grep --color=auto"

# Ask for confirmation before overriding
alias mv="mv -i"
alias cp="cp -i"

# Create dirs recursively and verbosely
alias mkdir="mkdir -pv"

# Prints what it removes
alias rm="rm -v"

alias getmake="cp ~/tools/ctools/Makefile ."
alias getmain="cp ~/tools/ctools/main.c ."
alias getctools="getmake ; getmain"
alias getcpptools="cp ~/tools/cpptools/Makefile ~/tools/cpptools/main.cpp ."

alias LS="ls"
alias sl="ls"
alias SL="ls"

alias make="make -j8"
alias ccat="highlight --out-format=ansi"

alias ocaml="rlwrap ocaml"

alias music-dl="youtube-dl -x -f bestaudio"

alias rscp="rsync -p --progress"

alias only-unique="sort | uniq"
