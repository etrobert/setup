# Launch applications
alt - 1 : open -a "Arc"
alt - 2 : open -a "Ghostty"
alt - 3 : open -a "Slack"
alt - 4 : open -a "Notion"
alt - 5 : open -a "Spotify"

# Map alt + hjkl to arrow keys
alt - h : skhd -k "left"
alt - j : skhd -k "down"
alt - k : skhd -k "up"
alt - l : skhd -k "right"

alt + shift - h : skhd -k "shift-left"
alt + shift - j : skhd -k "shift-down"
alt + shift - k : skhd -k "shift-up"
alt + shift - l : skhd -k "shift-right"
