#!/bin/bash

set -e

WORKTREE_PATH="$1"

if [ -z "$WORKTREE_PATH" ]; then
  echo "Usage: $0 <branch-name>"
  exit 1
fi

SESSION_NAME=$(basename "$WORKTREE_PATH")

# Kill tmux session
tmux kill-session -t "$SESSION_NAME"

# Remove worktree
git worktree remove "$WORKTREE_PATH"

echo "Cleaned up $SESSION_NAME"

