#!/bin/sh

NO_EDIT_GIT_PARAM="--edit"
if [ "$1" = "--no-edit" ] || [ "$1" = "-n" ]; then
  NO_EDIT_GIT_PARAM=
elif [ -n "$1" ]; then
  echo "Error: Unknown parameter '$1'. Use --no-edit or -n to skip editor." >&2
  exit 1
fi

if [ -z "$OPENAI_API_KEY" ]; then
  echo "Error: OPENAI_API_KEY is not set."
  exit 1
fi

if ! DIFF=$(git diff --cached -- ':!/package-lock.json' ':!/pnpm-lock.yaml' ':!/yarn.lock' 2>/dev/null); then
  echo "Error: Unable to get staged changes."
  exit 1
fi

if [ -z "$DIFF" ]; then
  echo "No staged changes to commit."
  exit 0
fi

RECENT_COMMITS=$(git log --pretty=format:'%s' --max-count=5)

# See https://tbaggery.com/2008/04/19/a-note-about-git-commit-messages.html
SYSTEM_PROMPT="You generate commit messages. Only respond with the commit message.
Message has to be 50 characters or less"

USER_PROMPT="Recent commit messages for style reference:

$RECENT_COMMITS

Write a clear commit message for this diff:

$DIFF"

REQUEST_BODY=$(jq --null-input --arg user_prompt "$USER_PROMPT" --arg system_prompt "$SYSTEM_PROMPT" '{
  "model": "gpt-4.1",
  "messages": [
    {
      "role": "system",
      "content": $system_prompt
    },
    {
      "role": "user",
      "content": $user_prompt
    }
  ]
}')

RESPONSE=$(curl -s -w "\n%{http_code}" "https://api.openai.com/v1/chat/completions" \
  -H "Content-Type: application/json" \
  -H "Authorization: Bearer $OPENAI_API_KEY" \
  -d "$REQUEST_BODY")

HTTP_CODE=$(echo "$RESPONSE" | tail -n 1)
RESPONSE_BODY=$(echo "$RESPONSE" | sed '$d')

if [ "$HTTP_CODE" -ne 200 ]; then
  echo "HTTP $HTTP_CODE
$RESPONSE_BODY"
  exit 1
fi

MESSAGE=$(echo "$RESPONSE_BODY" | jq -r '.choices[0].message.content')

if [ -z "$MESSAGE" ]; then
  echo "No commit message generated."
  exit 1
fi

echo "$MESSAGE" | git commit -F - $NO_EDIT_GIT_PARAM
