[user]
  email = etiennerobert33@gmail.com
  name  = Etienne Robert
[core]
  whitespace = trailing-space tab-in-indent tabwidth=2
  editor = nvim
[alias]
  ci = commit
  co = checkout
  st = status --short --branch
  br = branch
  di = diff
  ds = difftool --staged
  ff = merge --ff-only
  vimdiff = difftool --no-prompt --tool=vimdiff
  #lg = log --graph --oneline
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  praise = blame
  please = push --force-with-lease
  publish = push --set-upstream origin HEAD
  sco = "!f() { git checkout $(git branch | grep \"$1\" | head --lines=1); }; f"
  sco2 = "!git checkout $(git branch | fzf)"
  sbranch = "for-each-ref --sort=-committerdate refs/heads/ --format=\"%(committerdate:short) %(refname:short)\""
  dft = difftool
  dlog = "-c diff.external=difft log -p --ext-diff"
  dbranch = "!git branch | grep -v '^\\*' | xargs -n 1 git branch -d"
  puhs = push
[pager]
  status = on
[push]
  default = upstream
  autoSetupRemote = true
[merge]
  tool = vimdiff
  defaulttoupstream = true
  conflictstyle = diff3
  log = true
  # Don't keep backup .orig files
  keepBackup = false
[mergetool "vimdiff"]
  path = nvim
[log]
  decorate = true
[branch]
  autosetuprebase = always
[init]
	defaultBranch = main
[pull]
  rebase = true
[diff]
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
